<UserControl x:Class="TaskTimeTracker.Controls.Popup.PopupDeleteTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTimeTracker.Controls.Popup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Popup Name="popup" Placement="Center">
		<StackPanel Background="LightGray" Width="280" Height="55">
			<Label HorizontalAlignment="Center" >Are you sure you want to delete the Timer?</Label>
			<DockPanel Width="100">
				<Button Width="40" Click="OnPopupYesCLick" HorizontalAlignment="Left">Yes</Button>
				<Button Width="40" Click="OnPopupNoCLick" HorizontalAlignment="Right">No</Button>
			</DockPanel>
		</StackPanel>
	</Popup>
</UserControl>
