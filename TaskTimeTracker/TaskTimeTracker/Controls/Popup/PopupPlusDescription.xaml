<UserControl x:Class="TaskTimeTracker.Controls.Popup.PopupPlusDescription"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TaskTimeTracker.Controls.Popup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<Popup Name="popup" Placement="Center">
		<StackPanel Background="LightGray" Width="500" Height="60">
			<Label Margin="10 0 10 0" HorizontalAlignment="Left">Enter a description</Label>
			<DockPanel>
				<TextBox Name="tbValue" Margin="10 0 10 0" HorizontalAlignment="Left" Width="430"></TextBox>
				<Button Margin="0 0 10 0" Click="OnPopupOkCLick">Ok</Button>
			</DockPanel>
		</StackPanel>
	</Popup>
</UserControl>
